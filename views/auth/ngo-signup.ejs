<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/ngo-signup" method="POST" novalidate>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'ngoemail') ? 'invalid' : '' %>"
                    type="email" 
                    name="ngoemail" 
                    id="ngoemail" 
                    value="<%= oldInput.ngoemail %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'ngopassword') ? 'invalid' : '' %>"
                    type="password" 
                    name="ngopassword" 
                    id="ngopassword" 
                    value="<%= oldInput.ngopassword %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                    class="<%= validationErrors.find(e => e.param === 'ngoconfirmPassword') ? 'invalid' : '' %>"
                    type="password" 
                    name="ngoconfirmPassword" 
                    id="ngoconfirmPassword" 
                    value="<%= oldInput.ngoconfirmPassword %>">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button class="btn" type="submit">Signup</button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>